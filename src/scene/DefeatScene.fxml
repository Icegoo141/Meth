<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0"
           prefWidth="1000.0" style="-fx-background-color: black;"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="scene.DefeatSceneController">
    <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
        <ImageView fx:id="defeatSceneImage" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true"
                   preserveRatio="true">
            <VBox.margin>
                <Insets top="50.0"/>
            </VBox.margin>
        </ImageView>
        <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Disappointing, in the end, you're nothing but a failure.">
            <font>
                <Font name="Bell MT Bold" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets top="30.0"/>
            </VBox.margin>
        </Text>
        <Text fill="WHITE" fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0"
              text="Accept your defeat or rise again?" textAlignment="CENTER">
            <font>
                <Font name="Bell MT Bold" size="24.0"/>
            </font>
            <VBox.margin>
                <Insets top="10.0"/>
            </VBox.margin>
        </Text>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#startGame"
                onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit" prefHeight="54.0" prefWidth="426.0"
                style="-fx-background-color: transparent;" text="Rise again" textFill="#4f4286">
            <font>
                <Font name="Bell MT Bold" size="28.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#goToMainMenu"
                onMouseEntered="#onMouseEnter" onMouseExited="#onMouseExit" prefHeight="54.0" prefWidth="210.0"
                style="-fx-background-color: transparent;" text="Accept defeat" textFill="#4f4286">
            <font>
                <Font name="Bell MT Bold" size="28.0"/>
            </font>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </Button>
    </VBox>
</StackPane>
